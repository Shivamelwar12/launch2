  break;
 

    	

  case 5:
    
      amravati_express();
   
      break;
   

   case 6:
  
      jan_shatab_express();
  
      break;
  
  

case 7:

      vande_bharat_express();
    break;
  
 

  case 8:

    mumbai_cst_express();

      break;
    
 
 
   default:
   {
    printf("enter correct choice please");
    
   }
    


 /*  case 3:
 printf("\n\n mumbai hai");
  break;


  case 4:
 printf("\n\n amritsar hai");
  break;
*/
  //default:
 // printf("\n\n correct number please");


}//switch close 

 


 }//void booktrainclose
 


